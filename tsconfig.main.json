{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "bundler",
    "types": ["node"]
  },
  "include": ["main.ts", "whatsapp-handler.ts", "index.ts"],
  "exclude": ["node_modules", "dist", "dist-react", "src", "renderer.ts"]
}
